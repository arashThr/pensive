      <spa-slates="hidden sm:inli-slate/span>
      <a href="/bookmarks" class="underline font-bold">VIEW YOU-slateARY</a>
    </div>
    <meta http-equiv="refresh" content="10;url=/users/import-status?job_id={{.JobID}}">
  </div>
</div>

{{template "footer" .}}