<div class="space-y-8">
  <div>
    <h2 class="text-xl font-bold mb-6 text-white">Profile information</h2>
    <div class="bg-gray-700/50 backdrop-blur-sm border border-gray-600/50 rounded-lg p-6">
      <div class="flex items-center gap-3 mb-2">
        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
        </svg>
        <p class="text-sm font-semibold text-gray-300">Email address</p>
      </div>
      <p class="font-mono text-white pl-8">{{.Email}}</p>
    </div>
  </div>

  <!-- Subscription Status Section -->
  <div>
    <h3 class="text-xl font-bold mb-6 text-white">Subscription status</h3>
    {{if .IsSubscribed}}
      <div class="bg-green-900/20 backdrop-blur-sm border border-green-500/30 rounded-xl p-6">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 bg-green-900/30 backdrop-blur-sm rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <p class="font-bold text-green-300">Premium subscriber</p>
          </div>
        </div>
        <p class="mb-6 text-green-200">Enjoy 100 bookmarks per day, Telegram integration, and priority support.</p>
        <a href="/payments/portal-session" class="inline-flex items-center gap-2 bg-green-600 hover:bg-green-700 text-white px-6 py-3 font-semibold rounded-lg transition-all transform hover:scale-105 shadow-lg">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          Manage subscription
        </a>
      </div>
    {{else}}
      <div class="bg-blue-900/20 backdrop-blur-sm border border-blue-500/30 rounded-xl p-6">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 bg-blue-900/30 backdrop-blur-sm rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <div>
            <p class="font-bold text-blue-300">Free account</p>
          </div>
        </div>
        <p class="mb-6 text-blue-200">You have all AI features! Upgrade to premium for higher daily limits and integrations.</p>
        <div class="mb-6 space-y-2">
          <div class="flex items-center gap-3 text-sm text-blue-300">
            <svg class="w-4 h-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            100 bookmarks/day (vs 10 on free)
          </div>
          <div class="flex items-center gap-3 text-sm text-blue-300">
            <svg class="w-4 h-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Telegram bot integration
          </div>
          <div class="flex items-center gap-3 text-sm text-blue-300">
            <svg class="w-4 h-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Priority support
          </div>
        </div>
        <a href="/users/subscribe" class="inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 font-semibold rounded-lg transition-all transform hover:scale-105 shadow-lg">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          Learn more about premium
        </a>
      </div>
    {{end}}
  </div>
</div>