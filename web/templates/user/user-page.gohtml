{{template "header" .}}

<div class="px-6 py-16 max-w-2xl mx-auto">
  <div class="bg-white rounded-lg shadow-sm p-6">
    <h1 class="pb-6 text-2xl font-semibold text-gray-900 tracking-tight text-center">Your Account</h1>

    <!-- User Info -->
    <div class="py-4">
      <p class="text-sm text-gray-500">Email</p>
      <p class="text-base text-gray-900">{{.Email}}</p>
    </div>

    <!-- API Token Section -->
    <div class="py-4">
      <div class="flex justify-between items-center mb-4">
        <p class="text-sm text-gray-500">API Tokens</p>
        <form action="/users/generate-token" method="post" id="token-generate-container">
          {{csrfField}}
          <button
            class="py-2 px-4 bg-red-600 hover:bg-red-700 text-white rounded-md text-sm font-semibold shadow-sm transition-all duration-200"
            hx-post="/users/generate-token"
            hx-target="#token-container"
            hx-swap="innerHTML"
            hx-indicator=".htmx-indicator"
            type="submit"
          >
            Create
          </button>
          <span class="htmx-indicator hidden text-gray-500 ml-2">âŒ›</span>
        </form>
      </div>
      <div id="token-container">
        {{if .Tokens}}
        <table class="w-full text-left">
          <thead>
            <tr class="text-sm text-gray-500">
              <th class="pb-2">Token</th>
              <th class="pb-2">Creation Date</th>
              <th class="pb-2"></th>
            </tr>
          </thead>
          <tbody>
            {{range $index, $token := .Tokens}}
            <tr id="token-{{$index}}" class="border-t border-gray-200">
              <td class="py-3 text-base text-gray-900">{{"***"}}</td>
              <td class="py-3 text-base text-gray-900">{{$token.CreatedAt.Format "2006-01-02 15:04:05"}}</td>
              <td class="py-3 text-right">
                <form id="delete-form-{{$index}}">
                  {{csrfField}}
                  <input type="hidden" name="token_id" value="{{$token.ID}}">
                  <button class="text-gray-500 hover:text-red-600 transition-colors" type="button"
                    hx-post="/users/delete-token" hx-confirm="Are you sure you want to delete this token? This action cannot be undone." hx-target="#token-{{$index}}" hx-swap="outerHTML"
                    title="Delete token">
                    <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                  </button>
                </form>
              </td>
            </tr>
            {{end}}
          </tbody>
        </table>
        <p class="text-xs text-gray-500 mt-2">Deleted tokens cannot be recovered.</p>
        {{else}}
        <p class="text-xs text-gray-500 mt-2">No API tokens generated yet.</p>
        {{end}}
      </div>
    </div>

    <!-- Subscription Section -->
    <div class="py-4">
      <p class="text-sm text-gray-500 mb-2">Subscription</p>
      {{if .IsSubscribed}}
      <p class="text-base text-gray-900">Active</p>
      <a
        href="/payments/portal-session"
        class="mt-2 inline-block text-sm text-red-600 hover:text-red-700 transition-colors"
      >
        Manage Subscription
      </a>
      {{else}}
      <p class="text-base text-gray-900">Not Active</p>
      <form action="/payments/create-checkout-session" method="post">
        {{csrfField}}
        <button
          class="mt-2 w-full py-3 bg-red-600 hover:bg-red-700 text-white rounded-md text-base font-semibold shadow-sm transition-all duration-200"
          type="submit"
        >
          Subscribe - $1.00
        </button>
      </form>
      {{end}}
    </div>
  </div>
</div>

{{template "footer" .}}