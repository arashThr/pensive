{{template "header" .}}
<div class="px-6 py-12 max-w-4xl mx-auto">
  <h1 class="text-3xl font-bold py-4 tracking-tight text-gray-900">FAQ Page</h1>
  <ul class="grid grid-cols-2 gap-16">
    {{range .}}
    {{template "qa" .}}
    {{end}}
  </ul>
</div>
{{template "footer" .}}

{{define "qa"}}
<li class="border-t border-gray-300 py-1 px-2">
  <span class="block text-gray-900 font-semibold">{{.Question}}</span>
  <span class="block text-sm text-gray-600">{{.Answer}}</span>
</li>
{{end}}
