{{define "header"}}
<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{if .Title}}{{.Title}} - {{end}}Pensive</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
  {{if isProduction}}
    <link rel="stylesheet" href="/assets/style.css" />
    {{if shouldUseAnalytics}}
      <script defer src="https://cloud.umami.is/script.js" data-website-id="b95d62c9-9449-42d7-bea2-de799514d330"></script>
    {{end}}
  {{else}}
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            fontFamily: {
              'sans': ['IBM Plex Sans', 'system-ui', 'sans-serif'],
            }
          }
        }
      }
    </script>
  {{end}}
  <style>
    .dot-grid-bg {
      background-image: radial-gradient(circle, #e5e7eb 0.5px, transparent 0.5px);
      background-size: 5px 5px;
      background-position: 0 0;
    }
  </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-gray-900 via-slate-800 to-gray-900 text-white flex flex-col font-sans relative overflow-x-hidden">
  <!-- True Kandinsky-inspired floating circles on dark background -->
  <div class="fixed inset-0 pointer-events-none z-0 overflow-hidden">
    <!-- Large sophisticated circles with subtle glows -->
    <div class="absolute w-48 h-48 rounded-full top-20 left-10" style="background: radial-gradient(circle, rgba(59, 130, 246, 0.4) 0%, rgba(29, 78, 216, 0.2) 70%, transparent 100%);"></div>
    <div class="absolute w-32 h-32 rounded-full top-40 right-20" style="background: radial-gradient(circle, rgba(245, 158, 11, 0.5) 0%, rgba(217, 119, 6, 0.3) 70%, transparent 100%);"></div>
    <div class="absolute w-64 h-64 rounded-full bottom-32 left-20" style="background: radial-gradient(circle, rgba(16, 185, 129, 0.3) 0%, rgba(5, 150, 105, 0.15) 70%, transparent 100%);"></div>
    <div class="absolute w-40 h-40 rounded-full top-60 right-40" style="background: radial-gradient(circle, rgba(139, 92, 246, 0.4) 0%, rgba(109, 40, 217, 0.2) 70%, transparent 100%);"></div>
    <div class="absolute w-56 h-56 rounded-full bottom-40 right-10" style="background: radial-gradient(circle, rgba(239, 68, 68, 0.35) 0%, rgba(185, 28, 28, 0.18) 70%, transparent 100%);"></div>

    <!-- Medium floating circles -->
    <div class="absolute w-24 h-24 rounded-full top-80 left-1/3" style="background: radial-gradient(circle, rgba(236, 72, 153, 0.5) 0%, rgba(190, 24, 93, 0.3) 70%, transparent 100%);"></div>
    <div class="absolute w-36 h-36 rounded-full top-1/3 left-2/3" style="background: radial-gradient(circle, rgba(34, 197, 94, 0.4) 0%, rgba(21, 128, 61, 0.2) 70%, transparent 100%);"></div>

    <!-- Small accent circles -->
    <div class="absolute w-16 h-16 rounded-full bottom-60 left-1/2" style="background: radial-gradient(circle, rgba(251, 191, 36, 0.6) 0%, rgba(245, 158, 11, 0.4) 70%, transparent 100%);"></div>
    <div class="absolute w-20 h-20 rounded-full top-1/4 right-1/4" style="background: radial-gradient(circle, rgba(168, 85, 247, 0.5) 0%, rgba(124, 58, 237, 0.3) 70%, transparent 100%);"></div>
    <div class="absolute w-12 h-12 rounded-full bottom-80 right-1/3" style="background: radial-gradient(circle, rgba(6, 182, 212, 0.6) 0%, rgba(8, 145, 178, 0.4) 70%, transparent 100%);"></div>
  </div>
  
  <!-- Header -->
  <header class="bg-gray-900/90 backdrop-blur-md border-b border-gray-700/50 sticky top-0 z-50 shadow-xl">
    <div class="px-4 sm:px-6 max-w-6xl mx-auto">
      <div class="flex items-center justify-between h-16">
        
        <!-- Logo -->
        <div class="flex items-center gap-3 relative z-10">
          <a href="{{if currentUser}}/home{{else}}/{{end}}" class="flex items-center gap-3 hover:opacity-80 transition-all transform hover:scale-105">
            <img src="/assets/title-logo.png" class="h-6" />
            <div class="font-bold text-lg text-white">
              Pensive <span class="text-xs font-medium text-violet-400 bg-violet-900/50 px-2 py-1 rounded-full">Beta</span>
            </div>
          </a>
        </div>

        {{if currentUser}}
          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center gap-6 lg:gap-8 relative z-10">
            <a href="/home" class="text-gray-300 hover:text-white font-medium transition-colors">Search</a>
            <a href="/bookmarks" class="text-gray-300 hover:text-white font-medium transition-colors">Library</a>
            <a href="/integrations" class="text-gray-300 hover:text-white font-medium transition-colors">Extensions</a>
            
            <!-- Account Menu -->
            <div class="relative">
              <button id="account-menu" class="flex items-center gap-1 text-gray-300 hover:text-white font-medium transition-colors">
                Account
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </button>

              <div id="account-dropdown" class="hidden absolute right-0 mt-2 w-48 bg-gray-800/95 backdrop-blur-sm border border-gray-600 rounded-lg shadow-xl z-50">
                <a href="/users/me" class="block px-4 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors rounded-t-lg">Settings</a>
                <hr class="border-gray-600">
                <form action="/signout" method="post" class="block">
                  {{csrfField}}
                  <button type="submit" class="w-full text-left px-4 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors rounded-b-lg">
                    Sign out
                  </button>
                </form>
              </div>
            </div>
          </div>

          <!-- Mobile Menu Button -->
          <button id="mobile-menu-button" class="md:hidden p-2 text-gray-300 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
          </button>

        {{else}}
          <!-- Logged Out Navigation -->
          <div class="flex items-center gap-3 sm:gap-4 relative z-10">
            <a href="/signin" class="text-gray-300 hover:text-white font-medium transition-colors text-sm sm:text-base">Sign in</a>
            <a href="/signup" class="bg-violet-600 text-white px-3 py-2 sm:px-4 font-semibold rounded-lg hover:bg-violet-700 transition-colors text-sm sm:text-base">Sign up</a>
          </div>
        {{end}}
      </div>

      {{if currentUser}}
        <!-- Mobile Navigation Menu -->
        <div id="mobile-menu" class="hidden md:hidden border-t border-gray-700 bg-gray-800/95 backdrop-blur-sm">
          <div class="py-2 space-y-1 px-4 sm:px-6">
            <a href="/home" class="block py-3 px-4 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors rounded-lg">Search</a>
            <a href="/bookmarks" class="block py-3 px-4 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors rounded-lg">Library</a>
            <a href="/integrations" class="block py-3 px-4 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors rounded-lg">Extensions</a>
            <a href="/users/me" class="block py-3 px-4 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors rounded-lg">Settings</a>
            <hr class="border-gray-600 my-2">
            <form action="/signout" method="post">
              {{csrfField}}
              <button type="submit" class="block py-3 px-4 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors w-full text-left rounded-lg">
                Sign out
              </button>
            </form>
          </div>
        </div>
      {{end}}
    </div>
  </header>

  <!-- Alerts -->
  {{if messages}}
    <div class="px-6 py-4 max-w-4xl mx-auto">
      {{range messages}}
        <div class="{{if .IsError}}bg-red-50 border border-red-200 text-red-800{{else}}bg-blue-50 border border-blue-200 text-blue-800{{end}} p-4 mb-4 rounded-lg flex items-start justify-between">
          <div class="flex items-start gap-3">
            {{if .IsError}}
              <svg class="w-5 h-5 text-red-500 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
            {{else}}
              <svg class="w-5 h-5 text-blue-500 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
              </svg>
            {{end}}
            <span class="font-medium">{{.Message}}</span>
          </div>
          <button onclick="closeAlert(event)" class="text-gray-400 hover:text-gray-600 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
      {{end}}
    </div>
  {{end}}

  <main class="flex-1 relative z-10">
{{end}}

{{define "footer"}}
  </main>

  <footer class="border-t border-gray-700/50 bg-gray-900/80 backdrop-blur-sm py-8 sm:py-12 mt-20 relative z-10 shadow-xl">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="flex flex-col lg:flex-row justify-between items-start gap-8">
        <!-- Brand -->
        <div class="flex items-center gap-3">
          <img src="/assets/title-logo.png" class="h-6" />
          <div>
            <div class="font-bold text-lg text-white">Pensive</div>
            <div class="text-sm text-gray-400">Your searchable memory of the web</div>
          </div>
        </div>
        
        <!-- Links -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 sm:gap-8 text-sm w-full lg:w-auto">
          <div>
            <h4 class="font-semibold text-white mb-3">Product</h4>
            <div class="space-y-2">
              <a href="/" class="block text-gray-400 hover:text-white transition-colors">Home</a>
            </div>
          </div>

          <div>
            <h4 class="font-semibold text-white mb-3">Resources</h4>
            <div class="space-y-2">
              <a href="/faq" class="block text-gray-400 hover:text-white transition-colors">FAQ</a>
              <a href="/contact" class="block text-gray-400 hover:text-white transition-colors">Contact</a>
              <a href="https://arashtaher.com/blog/introducing-pensive/" class="block text-gray-400 hover:text-white transition-colors" target="_blank" rel="noopener">Blog</a>
            </div>
          </div>

          <div>
            <h4 class="font-semibold text-white mb-3">Extensions</h4>
            <div class="space-y-2">
              <a href="https://chromewebstore.google.com/detail/pensive-save-search-what/klmginbbicjdpaodcbokdjbhnbaocomd" class="block text-gray-400 hover:text-white transition-colors" target="_blank" rel="noopener">Chrome</a>
              <a href="https://addons.mozilla.org/en-US/firefox/addon/pensive/" class="block text-gray-400 hover:text-white transition-colors" target="_blank" rel="noopener">Firefox</a>
              <a href="https://t.me/GetPensiveBot" class="block text-gray-400 hover:text-white transition-colors" target="_blank" rel="noopener">Telegram Bot</a>
            </div>
          </div>

          <div>
            <h4 class="font-semibold text-white mb-3">Legal</h4>
            <div class="space-y-2">
              <a href="/privacy" class="block text-gray-400 hover:text-white transition-colors">Privacy</a>
              <a href="https://github.com/arashThr" class="block text-gray-400 hover:text-white transition-colors" target="_blank" rel="noopener">GitHub</a>
            </div>
          </div>
        </div>
      </div>
      
      <hr class="border-gray-700/50 my-6 sm:my-8">

      <div class="flex flex-col sm:flex-row items-center justify-between gap-4 text-sm text-gray-400">
        <div class="text-center sm:text-left">
          © 2025 Pensive. Built with care for developers and researchers.
          <br class="sm:hidden">
          <a href="https://github.com/arashThr/pensive" class="text-violet-400 hover:text-violet-300 transition-colors">Open source</a> under AGPL-3.0 license.
        </div>
        <div class="flex items-center gap-4">
          <span class="flex items-center gap-1">
            <span class="w-2 h-2 bg-green-500 rounded-full"></span>
            All systems operational
          </span>
        </div>
      </div>
    </div>
  </footer>

  <!-- JavaScript -->
  <script>
    // Mobile menu toggle
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }

    // Account dropdown toggle
    const accountMenu = document.getElementById('account-menu');
    const accountDropdown = document.getElementById('account-dropdown');
    
    if (accountMenu && accountDropdown) {
      accountMenu.addEventListener('click', (e) => {
        e.stopPropagation();
        accountDropdown.classList.toggle('hidden');
      });
      
      document.addEventListener('click', () => {
        accountDropdown.classList.add('hidden');
      });
    }

    // Alert close function
    function closeAlert(event) {
      event.target.closest('div').remove();
    }
  </script>
  <script src="/assets/htmx.min.js"></script>
</body>
</html>
{{end}}

<!-- Pagination -->
{{define "pagination"}}
  <div class="mt-12 flex justify-between items-center">
    {{if gt .Pages.Current 1}}
      <a href="?page={{.Pages.Previous}}" 
         class="inline-flex items-center gap-2 py-2 px-4 border border-gray-300 rounded-lg text-sm font-medium text-white hover:bg-gray-50 hover:border-gray-400 transition-colors">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Previous
      </a>
    {{else}}
      <span class="invisible py-2 px-4"></span>
    {{end}}

    <span class="text-sm font-medium text-gray-600">Page {{.Pages.Current}}</span>

    {{if .MorePages}}
      <a href="?page={{.Pages.Next}}" 
         class="inline-flex items-center gap-2 py-2 px-4 border border-gray-300 rounded-lg text-sm font-medium text-white hover:bg-gray-50 hover:border-gray-400 transition-colors">
        Next
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>
    {{else}}
      <span class="invisible py-2 px-4"></span>
    {{end}}
  </div>
{{end}}
