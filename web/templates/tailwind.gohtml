{{define "header"}}
<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/assets/style.css" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
</head>
<body class="min-h-screen bg-gray-100 text-gray-900 font-sans flex flex-col antialiased">
  <header class="bg-white border-b border-gray-200 shadow-sm">
    <nav class="px-6 py-4 flex items-center max-w-7xl mx-auto">
      <div class="text-2xl font-semibold tracking-tight">
        <a href="/" class="flex items-center gap-2">
          <span>ðŸ“–</span> <span>Pensieve</span>
        </a>
      </div>

      <!-- Hamburger (mobile only) -->
      <div class="ml-auto md:hidden">
        <button id="menu-btn" class="focus:outline-none text-gray-900 hover:text-red-600 transition-colors">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
          </svg>
        </button>
      </div>

      <!-- Desktop Menu -->
      <div class="hidden md:flex ml-auto space-x-6 items-center text-sm font-medium">
        {{if currentUser}}
          <a class="hover:text-red-600 transition-colors" href="/bookmarks">Bookmarks</a>
          <a class="hover:text-red-600 transition-colors" href="/users/me">Account</a>
          <a class="hover:text-red-600 transition-colors" href="/integrations">Integrations</a>
          <form action="/signout" method="post" class="inline">
            {{csrfField}}
            <button type="submit" class="hover:text-red-600 transition-colors">Sign Out</button>
          </form>
        {{else}}
          <a class="hover:text-red-600 transition-colors" href="/signin">Sign In</a>
          <a class="bg-red-600 hover:bg-red-700 text-white px-4 py-1.5 rounded-md transition-colors" href="/signup">Sign Up</a>
        {{end}}
      </div>
    </nav>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-200">
      {{if currentUser}}
        <a class="block px-6 py-3 hover:bg-gray-100 transition-colors" href="/bookmarks">Bookmarks</a>
        <a class="block px-6 py-3 hover:bg-gray-100 transition-colors" href="/users/me">Account</a>
        <a class="block px-6 py-3 hover:bg-gray-100 transition-colors" href="/integrations">Integrations</a>
        <form action="/signout" method="post">
          {{csrfField}}
          <button type="submit" class="block w-full text-left px-6 py-3 hover:bg-gray-100 transition-colors">Sign Out</button>
        </form>
      {{else}}
        <a class="block px-6 py-3 hover:bg-gray-100 transition-colors" href="/signin">Sign In</a>
        <a class="block px-6 py-3 bg-red-600 hover:bg-red-700 text-white transition-colors" href="/signup">Sign Up</a>
      {{end}}
    </div>
  </header>

  <!-- Alerts -->
  <div class="px-6 py-2 max-w-2xl mx-auto">
    {{range messages}}
      <div class="flex px-4 py-3 mb-2 bg-white border {{if .IsError}}border-red-500 text-red-600{{else}}border-amber-700 text-amber-700{{end}} rounded-md shadow-sm">
        <div class="flex-grow">{{.Message}}</div>
        <a href="#" onclick="closeAlert(event)" class="ml-2 hover:opacity-75 transition-opacity">
          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </a>
      </div>
    {{end}}
  </div>

  <main class="flex-grow">
{{end}}

{{define "footer"}}
  </main>
  <footer class="bg-white border-t border-gray-200 py-6 text-gray-500 text-sm">
    <div class="max-w-7xl mx-auto text-center">
      <p class="mb-1">Â© 2025 Pensieve</p>
      <p>
        <a href="/privacy" class="hover:text-gray-900 transition-colors">Privacy</a> 
        <span class="mx-2">â€¢</span>
        <a href="/terms" class="hover:text-gray-900 transition-colors">Terms</a>
      </p>
    </div>
  </footer>

  <script>
    const menuBtn = document.getElementById('menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    menuBtn.addEventListener('click', () => mobileMenu.classList.toggle('hidden'));
    function closeAlert(event) {
      event.target.closest('.flex').remove();
    }
  </script>
  <script src="https://unpkg.com/htmx.org@1.9.6"></script>
</body>
</html>
{{end}}