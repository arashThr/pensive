{{define "header"}}
<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/assets/style.css" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              'primary': '#1f2937',
              'secondary': '#f9fafb',
              'accent': '#7c3aed',
              'subtle': '#e5e7eb'
          }
        }
      }
    }
  </script>
</head>
<body class="min-h-screen bg-secondary text-primary font-sans flex flex-col antialiased">
  <!-- Header -->
  <header class="pb-6 bg-secondary sticky top-0 z-50">
    <div class="px-4 sm:px-6 max-w-7xl mx-auto">
      
      <!-- Main Navigation Bar -->
      <div class="flex items-center justify-between h-16">
        
        <!-- Logo -->
        <div class="text-xl font-semibold tracking-tight">
          <a href="{{if currentUser}}/home{{else}}/{{end}}" class="flex items-center gap-2 hover:opacity-75 transition-all">
            <svg class="h-5 w-5 text-accent" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
            </svg>
            <span class="font-bold text-primary">Pensieve</span>
            <span class="text-xs font-medium text-gray-600">Beta</span>
          </a>
        </div>

        {{if currentUser}}
          <!-- Desktop Navigation -->
          <nav class="hidden md:flex items-center gap-1 text-sm font-medium">
            <a href="/bookmarks" class="px-3 py-2 text-gray-600 hover:text-primary hover:bg-subtle rounded-lg transition-colors">
              Library
            </a>
            <a href="/integrations" class="px-3 py-2 text-gray-600 hover:text-primary hover:bg-subtle rounded-lg transition-colors">
              Extensions
            </a>
            
            <!-- Account Dropdown -->
            <div class="relative">
              <button id="account-menu" class="flex items-center gap-2 px-3 py-2 text-gray-600 hover:text-primary hover:bg-subtle rounded-lg transition-colors">
                <div>Account</div>
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              
              <!-- Dropdown Menu -->
                <div id="account-dropdown" class="hidden absolute right-0 mt-2 w-48 bg-secondary border border-subtle rounded-lg shadow-lg">
                <a href="/users/me" class="block px-4 py-2 text-gray-600 hover:text-primary hover:bg-subtle">Account</a>
                <hr class="my-1 border-subtle">
                <form action="/signout" method="post" class="block">
                  {{csrfField}}
                  <button type="submit" class="w-full text-left px-4 py-2 text-gray-600 hover:text-primary hover:bg-subtle">
                  Sign Out
                  </button>
                </form>
                </div>
            </div>
          </nav>

          <!-- Mobile Menu Button -->
          <button id="mobile-menu-button" class="md:hidden p-2 text-gray-600 hover:text-primary hover:bg-subtle rounded-lg transition-colors">
            <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>

        {{else}}
          <!-- Logged Out Navigation -->
          <div class="flex items-center gap-4">
            <a href="/signin" class="text-gray-600 hover:text-primary transition-colors">Sign In</a>
            <a href="/signup" class="px-4 py-2 bg-primary text-secondary rounded-lg hover:bg-gray-800 transition-colors">Sign Up</a>
          </div>
        {{end}}
      </div>

      {{if currentUser}}
        <!-- Mobile Navigation Menu -->
        <div id="mobile-menu" class="hidden md:hidden pb-4">
          <nav class="flex flex-col gap-1">
            <a href="/bookmarks" class="px-3 py-2 text-gray-600 hover:text-primary hover:bg-subtle rounded-lg transition-colors">
              Library
            </a>
            <a href="/integrations" class="px-3 py-2 text-gray-600 hover:text-primary hover:bg-subtle rounded-lg transition-colors">
              Extensions
            </a>
            <a href="/users/me" class="px-3 py-2 text-gray-600 hover:text-primary hover:bg-subtle rounded-lg transition-colors">
              Account
            </a>
            <hr class="my-2 border-subtle">
            <form action="/signout" method="post">
              {{csrfField}}
              <button type="submit" class="w-full text-left px-3 py-2 text-gray-600 hover:text-primary hover:bg-subtle rounded-lg transition-colors">
                Sign Out
              </button>
            </form>
          </nav>
        </div>
      {{end}}
    </div>
  </header>

  <!-- Alerts -->
  {{if messages}}
    <div class="px-6 py-4 max-w-4xl mx-auto">
      {{range messages}}
        <div class="flex items-center justify-between px-4 py-3 mb-2 bg-secondary border border-subtle rounded-lg shadow-sm {{if .IsError}}text-red-600{{else}}text-gray-600{{end}}">
          <span>{{.Message}}</span>
          <button onclick="closeAlert(event)" class="ml-2 hover:opacity-75 transition-opacity">
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      {{end}}
    </div>
  {{end}}

  <main class="flex-grow">
{{end}}

{{define "footer"}}
  </main>
  <footer class="border-t border-subtle bg-secondary py-8">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-4 text-sm text-gray-600">
        <p>Â© 2025 Pensieve</p>
        <div class="flex items-center gap-6">
          <a href="/privacy" class="hover:text-primary transition-colors">Privacy</a>
          <a href="/about" class="hover:text-primary transition-colors">About</a>
          <a href="https://github.com/arashThr" class="hover:text-primary transition-colors" title="GitHub">
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </footer>

  <script>
    // Mobile menu toggle
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }

    // Account dropdown toggle
    const accountMenu = document.getElementById('account-menu');
    const accountDropdown = document.getElementById('account-dropdown');
    
    if (accountMenu && accountDropdown) {
      accountMenu.addEventListener('click', (e) => {
        e.stopPropagation();
        accountDropdown.classList.toggle('hidden');
      });
      
      // Close dropdown when clicking outside
      document.addEventListener('click', () => {
        accountDropdown.classList.add('hidden');
      });
    }

    // Alert close function
    function closeAlert(event) {
      event.target.closest('.flex').remove();
    }
  </script>
  <script src="/assets/htmx.min.js"></script>
</body>
</html>
{{end}}


<!-- Pagination -->
<!-- Need Pages { Current; Previous; Next } -->
{{define "pagination"}}
  <div class="mt-8 flex justify-between items-center">
    {{if gt .Pages.Current 1}}
      <a href="?page={{.Pages.Previous}}" 
         class="inline-flex items-center py-2 px-4 border border-gray-300 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-50 transition-colors duration-150 shadow-sm">
        Previous
      </a>
    {{else}}
      <span class="invisible py-2 px-4"></span>
    {{end}}

    <span class="text-sm text-gray-600">Page {{.Pages.Current}}</span>

    {{if .MorePages}}
      <a href="?page={{.Pages.Next}}" 
         class="inline-flex items-center py-2 px-4 border border-gray-300 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-50 transition-colors duration-150 shadow-sm">
        Next
      </a>
    {{else}}
      <span class="invisible py-2 px-4"></span>
    {{end}}
  </div>
{{end}}
