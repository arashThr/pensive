{{template "header" .}}

<div class="px-6 py-16 max-w-2xl mx-auto">

  <div class="flex justify-between pb-6">
    <h1 class="text-2xl font-semibold text-gray-900 tracking-tight">My Bookmarks</h1>

    <div>
      <a href="/bookmarks/new" class="inline-block py-3 px-6 bg-red-600 hover:bg-red-700 text-white rounded-md text-base font-semibold shadow-sm transition-all duration-200">New Bookmark</a>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm">
    <table class="w-full">
      <thead>
        <tr class="border-b border-gray-200">
          <th class="text-left py-4 px-6 text-sm text-gray-500 font-medium">Title</th>
          <th class="text-left py-4 px-6 text-sm text-gray-500 font-medium">Date Added</th>
          <th class="text-left py-4 px-6 text-sm text-gray-500 font-medium">Link</th>
        </tr>
      </thead>
      <tbody>
        {{range .Bookmarks}}
        <tr class="border-t border-gray-200 hover:bg-gray-50 transition-colors">
          <td class="py-4 px-6 flex items-center gap-2">
              <a href="/bookmarks/{{.Id}}/edit" class="text-red-600 hover:text-red-700 transition-colors">{{.Title}}</a>
          </td>
          <td class="py-4 px-6 text-sm text-gray-500">{{.CreatedAt}}</td>
          <td class="py-4 px-6 text-sm text-gray-500">
              <a href="{{.Link}}" target="_blank" class="text-red-600 hover:text-red-700 transition-colors">
                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
          </td>
        </tr>
        {{end}}
      </tbody>
    </table>
    {{if eq (len .Bookmarks) 0}}
      <div class="py-6 px-6 text-center text-gray-500 text-sm">No bookmarks yet. Add one below!</div>
    {{end}}
  </div>

  <!-- Pagination -->
  <div class="mt-6 flex justify-between items-center">
    <!-- Previous button or empty placeholder -->
    {{if gt .Pages.Current 1}}
      <a href="?page={{.Pages.Previous}}" 
         class="inline-block py-2 px-4 bg-red-600 hover:bg-red-700 text-white rounded-md text-sm font-semibold shadow-sm transition-all duration-200">
        Previous
      </a>
    {{else}}
      <span class="invisible py-2 px-4"></span>
    {{end}}

    <!-- Page number, always centered -->
    <span class="text-sm text-gray-600">Page {{.Pages.Current}}</span>

    <!-- Next button or empty placeholder -->
    {{if .MorePages}}
      <a href="?page={{.Pages.Next}}" 
         class="inline-block py-2 px-4 bg-red-600 hover:bg-red-700 text-white rounded-md text-sm font-semibold shadow-sm transition-all duration-200">
        Next
      </a>
    {{else}}
      <span class="invisible py-2 px-4"></span>
    {{end}}
  </div>
</div>

{{template "footer" .}}