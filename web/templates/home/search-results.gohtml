{{if .HasResults}}
  <div class="bg-gray-800/50 backdrop-blur-sm border border-gray-600/30 rounded-xl shadow-xl">
    <div class="p-6 border-b border-gray-600/50">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-bold text-white">Search Results</h2>
        <span class="text-sm font-semibold text-gray-300">
          {{len .Bookmarks}} result{{if ne (len .Bookmarks) 1}}s{{end}} for "{{.Query}}"
        </span>
      </div>
    </div>
    
    <div class="divide-y divide-gray-600/30">
      {{range .Bookmarks}}
        <a href="/bookmarks/{{.Id}}/edit" class="block hover:bg-gray-700/50 transition-colors">
          <div class="flex items-start gap-4 p-6">
            <!-- Favicon -->
            <div class="w-5 h-5 flex-shrink-0 mt-0.5">
              <img 
                src="https://www.google.com/s2/favicons?domain={{.Link}}&sz=64" 
                alt="{{.Title}}" 
                class="w-full h-full" 
                onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" 
              />
              <div class="w-full h-full bg-gray-700 flex items-center justify-center hidden">
                <svg class="w-3 h-3 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
            </div>
            
            <!-- Content -->
            <div class="flex-1 min-w-0">
              <h3 class="font-semibold mb-1 text-white hover:text-orange-400 transition-colors line-clamp-2 break-words">
                {{.Title}}
              </h3>
              <p class="text-xs mb-2 text-gray-400">{{.Hostname}}</p>
              {{if .Headline}}
                <p class="text-sm leading-relaxed mb-2 text-gray-300 line-clamp-2">{{.Headline | safe}}</p>
              {{end}}
              <span class="text-xs text-gray-400">{{.CreatedAt.Format "Jan 02, 2006"}}</span>
            </div>
          </div>
        </a>
      {{end}}
    </div>
  </div>
{{else}}
  <!-- Empty Search Results -->
  <div class="bg-gray-800/40 backdrop-blur-sm border border-gray-600/50 rounded-xl p-12 text-center">
    <div class="w-16 h-16 bg-orange-500/20 backdrop-blur-sm rounded-2xl flex items-center justify-center mx-auto mb-6 border border-orange-400/30">
      <svg class="w-8 h-8 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
    </div>
    <h3 class="text-xl font-bold mb-3 text-white">No results for "{{.Query}}"</h3>
    <p class="mb-8 max-w-sm mx-auto text-gray-300 leading-relaxed">
      Try different keywords or check your spelling. Your search will improve as you add more bookmarks.
    </p>
    <div class="space-y-3">
      <div class="flex flex-col sm:flex-row gap-3 justify-center items-center">
        <a href="/bookmarks/new" class="bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-600 hover:to-red-600 text-white font-semibold py-3 px-6 rounded-lg transition-all transform hover:scale-105 shadow-lg">
          Add new bookmark
        </a>
        <a href="/bookmarks" class="border border-gray-500 bg-gray-700/50 text-gray-200 font-semibold py-3 px-6 rounded-lg hover:bg-gray-600 transition-colors">
          Browse all bookmarks
        </a>
      </div>
    </div>
  </div>
{{end}} 