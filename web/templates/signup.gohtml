{{template "header" .}}

<script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
<div class="py-12 flex justify-center">
  <div class="p-8 max-w-md w-full bg-white rounded-xl border border-gray-300">
    <h1 class="pb-6 text-3xl font-bold text-gray-900 text-center tracking-tight">Start saving bookmarks</h1>
    <form action="/users" method="post">
      <div class="hidden">
        {{csrfField}}
      </div>
      <div class="py-4">
        <label class="block text-sm font-medium text-gray-600 mb-2" for="email">Email address</label>
        <input
          class="w-full px-4 py-2 border border-gray-300 focus:border-blue-600 focus:ring-1 focus:ring-blue-600/20 outline-none bg-white text-gray-900 rounded-lg placeholder:text-gray-600"
          name="email"
          id="email"
          type="email"
          placeholder="Email address"
          required
          autocomplete="email"
        />
      </div>
      <div class="py-4">
        <label class="block text-sm font-medium text-gray-600 mb-2" for="password">Password</label>
        <input
          class="w-full px-4 py-2 border border-gray-300 focus:border-blue-600 focus:ring-1 focus:ring-blue-600/20 outline-none bg-white text-gray-900 rounded-lg placeholder:text-gray-600"
          name="password"
          id="password"
          type="password"
          placeholder="Password"
          required
        />
      </div>
      <div class="cf-turnstile" data-sitekey="{{.TurnstileSiteKey}}"></div>
      <div class="py-6">
        <button class="w-full py-2 px-4 bg-blue-600 text-white rounded-lg text-sm font-medium hover:bg-blue-700" type="submit">Sign Up</button>
      </div>
      <div class="text-sm text-gray-600 flex justify-between">
        <a class="text-gray-600 hover:text-gray-900 transition-colors" href="/signin">Already have an account?</a>
        <a class="text-gray-600 hover:text-gray-900 transition-colors" href="/forgot-pw">Forgot password?</a>
      </div>
    </form>
  </div>
</div>

{{template "footer" .}}