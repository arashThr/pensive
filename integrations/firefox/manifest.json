{
    "manifest_version": 2,
    "name": "Pensieve",
    "version": "1.0",
    "description": "Save and organize your bookmarks with Pensieve",
    "permissions": [
      "<all_urls>",
      "storage",
      "activeTab"
    ],
    "options_ui": {
      "page": "options.html",
      "open_in_tab": true
    },
    "browser_action": {
      "default_icon": {
        "48": "img.png"
      },
      "default_title": "Pensieve - Save this page",
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"]
    },
    "options_page": "options.html",
    "content_scripts": [
      {
        "matches": [
          "http://localhost:8000/extension/auth",
          "https://apps.arashtaher.com/extension/auth"
        ],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      "options.js"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "pensieve-extension@mozilla.org"
      }
    }
  }